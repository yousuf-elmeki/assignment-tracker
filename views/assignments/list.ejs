<%- include("../partials/header") %>

<h2>Assignments</h2>

<a href="/assignments/new" class="btn btn-success mb-3">Add Assignment</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Due Date</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% assignments.forEach(a => { %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.course %></td>
        <td><%= a.dueDate.toLocaleDateString() %></td>
        <td><%= a.completed ? "Yes" : "No" %></td>
        <td>
          <a href="/assignments/<%= a._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
          <a href="/assignments/<%= a._id %>/delete" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("../partials/footer") %>
